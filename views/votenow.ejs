<body class="hold-transition fixed skin-blue sidebar-mini sidebar-collapse">
<div class="wrapper">

  <!-- Main Header -->
  <header class="main-header">

    <!-- Logo -->
    <a href="index2.html" class="logo">
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><b>CV</b>.io</span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><b>CryptoVote</b>.io</span>
    </a>

    <!-- Header Navbar -->

  </header>
  <!-- Left side column. contains the logo and sidebar -->


  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->

    <section class="content-header">
      <button type="button" class="btn bg-maroon margin"><%= current_time %></button>
      <button type="button" class="btn bg-maroon margin">General Elections</button>
      <div class="callout callout-success">
                <h4>Your Own Decentralized Voting App</h4>

                <p>Cast Your Vote Now</p>
      </div>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">

      <div class="row">
        <div id='party_list'>


          </div>


    </section>

    <section class="content container-fluid">

      <div class="row">

        <div class="col-md-12">
          <!-- Widget: user widget style 1 -->
          <div class="box box-widget widget-user">
            <!-- Add the bg color to the header using any of the bg-* classes -->
            <div class="widget-user-header bg-aqua-active">
              <h3 class="widget-user-username"><b><%= user.response[0].full_name %></b></h3>
            </div>
            <div class="widget-user-image">
              <img class="img-circle" src="https://cdn2.iconfinder.com/data/icons/ios-7-icons/50/user_male2-512.png" alt="User Avatar">
            </div>
            <div class="box-footer">
              <div class="row">
                <div class="col-sm-4 border-right">
                  <div class="description-block">
                    <h5 class="description-header"><%= user.response[0].user_hash %></h5>
                    <span class="description-text">Hash Address</span>
                  </div>
                  <!-- /.description-block -->
                </div>
                <!-- /.col -->
                <div class="col-sm-4 border-right">
                  <div class="description-block">
                    <h5 class="description-header"><%= user.response[0].mobile_no %></h5>
                    <span class="description-text">Contact No</span>
                  </div>
                  <!-- /.description-block -->
                </div>
                <!-- /.col -->
                <div class="col-sm-4">
                  <div class="description-block">
                    <h5 class="description-header"><%= user.response[0].gender %></h5>
                    <span class="description-text">Gender</span>
                  </div>
                  <!-- /.description-block -->
                </div>
                <div class="col-sm-4">
                  <div class="description-block">
                    <h5 class="description-header"><%= user.response[0].age %> Years</h5>
                    <span class="description-text">Age </span>
                  </div>
                  <!-- /.description-block -->
                </div>



                <!-- /.col -->
              </div>
              <!-- /.row -->
            </div>
          </div>
          <!-- /.widget-user -->
        </div>

      </div>
      <div class="row">

        <% if(user.response[0].age < 18){ %>
          <button type="button" class="btn btn-block btn-danger btn-lg">You are Not Eligible To Vote</button>

   <% } else{ %>
     <% if(user.response[0].is_verified==0){ %>
       <button type="button" class="btn btn-block btn-danger btn-lg">Please Wait For your Verification</button>

<% } else{ %>
  <a href="/vote/ballot"><button type="button" class="btn btn-block btn-danger btn-lg">Click Here to Vote</button></a>

<% } %>

  <% } %>




  </div>

    </section>



    <div style='padding-right:0px !important;padding-left:0px' class="col-lg-3 col-xs-3">
      <a href="/vote/home"><button style="background-color:#367fa9; border-color:#000; color:white" type="button" class="btn btn-block btn-default"><i class="fa fa-home" aria-hidden="true"></i></button></a>
    </div>
    <div style='padding-right:0px !important;padding-left:0px' class="col-lg-3 col-xs-3">
      <a href="/vote/votenow"><button style="background-color:#367fa9; border-color:#000; color:white" type="button" class="btn btn-block btn-default"><i class="fa fa-hand-pointer-o" aria-hidden="true"></i></button></a>
    </div>
    <div style='padding-right:0px !important;padding-left:0px' class="col-lg-3 col-xs-3">
      <a href="/vote/profile"><button style="background-color:#367fa9; border-color:#000; color:white" type="button" class="btn btn-block btn-default"><i class="fa fa-user-circle" aria-hidden="true"></i></button></a>
    </div>
    <div style='padding-right:0px !important;padding-left:0px' class="col-lg-3 col-xs-3">
      <a href="/logout"><button style="background-color:#367fa9; border-color:#000; color:white" type="button" class="btn btn-block btn-default"><i class="fas fa-sign-out" aria-hidden="true"></i></button></a>
