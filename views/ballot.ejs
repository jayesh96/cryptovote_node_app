<script>
$(document).ready(function(){

  var current_user_hash = document.getElementById("user_id_hash").innerHTML
          $.ajax({

                  url: 'http://54.208.175.231:5000/chain',
                  type: 'get',
                  cache:true,

                  success: function(data1){
                    for(i=0;i<data1.chain.length;i++){
