                        console.log(current_user_hash)
                        console.log(data1.chain[i].transactions[j]['sender'])

                        if(current_user_hash == data1.chain[i].transactions[j]['sender']){
                          $('#myModal').modal({backdrop: 'static', keyboard: false})

                        }else{
                            console.log("No")
                        }
                        console.log("----->")
                      }

                    }
                  },
        });

      return false;
    });

  </script>


<script type="text/javascript">

function add_transaction(party_id,hash_value,party_name,party_short_name,user_city,user_state,user_gender,age_group){
    $.ajax({
            type: 'POST',
            url: 'http://54.208.175.231:3000/votenew/makeVoteTransaction',
            data: {
                "recipient": party_id,
                "datetime":new Date(),
                "user_hash_value":hash_value,
                'party_name':party_name,
                'party_short_name':party_short_name,
                'user_city':user_city,
                'user_state':user_state,
                'user_gender':user_gender,
                'age_group':age_group

              },
            beforeSend:function(data){
              alert("Your Vote Is Recieved")
              $("input[type=button]").attr("disabled", "disabled");
            },

            success: function(data) {
                alert("You Have Successfully Voted")
                document.location.href = "/vote/success"


            }
        });

}
</script>

