  <!-- Left side column. contains the logo and sidebar -->


  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->

    <section class="content-header">
      <button type="button" class="btn bg-maroon margin">April 2, 2018</button>
      <button type="button" class="btn bg-maroon margin">General Elections</button>
      <div class="callout callout-success">
                <h4>Your Own Decentralized Voting App</h4>

                <p>Cast Your Vote Now</p>
      </div>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">

      <div class="row">

        <section class="content">

           <% for (var i = 0; i < obj.result.data.length; i++) { %>
          <div style="border-radius:20px; background-color:#367fa9 !important"class="info-box bg-yellow">
            <span style="border-radius:20px" class="info-box-icon"><i class="ion ion-ios-pricetag-outline"></i></span>

            <div class="info-box-content">
              <span class="info-box-text"><%= obj.result.data[i].registered_name %></span>
              <span class="info-box-number"><%= obj.result.data[i].short_name %></span>

              <div class="progress">
                <div class="progress-bar" style="background:#000!important ;width: 100%"></div>
              </div>
              <span class="progress-description">
                <input styyl type='hidden' id='party_<%= obj.result.data[i].id %>' value='<%= obj.result.data[i].hash_address %>'>
                    <input class='vote_button' type="button" id='party_<%= obj.result.data[i].id %>' style="background:red" onclick="add_transaction('<%= obj.result.data[i].hash_address %>')"  value="VOTE"></input>
                  </span>
            </div>
            <!-- /.info-box-content -->
          </div>
          <% } %>


        </section>


      </div>

    </section>




    <div style='padding-right:0px !important;padding-left:0px' class="col-lg-3 col-xs-3">
      <a href="/vote/home"><button style="background-color:#367fa9; border-color:#000; color:white" type="button" class="btn btn-block btn-default"><i class="fa fa-home" aria-hidden="true"></i></button></a>
