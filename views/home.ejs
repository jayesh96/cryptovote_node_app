              document.getElementById('refresh-button').style.display = 'block';
          },
          success: function(data){
              document.getElementById('refresh-button').style.display = 'None';
              console.log(data)
              for(i=0;i<data.chain.length;i++){
                for(j=0;j<data.chain[i].transactions.length-1;j++){
                  console.log(data.chain[i].transactions[j])
                  $('#newTransactionTable').append('<tr><td>'+parseInt(i)+'.</td><td>'+ (data.chain[i].transactions[j].recipient).substring(0,10) +'..</td><td>'+(data.chain[i].transactions[j].data)+'</td></tr>')

                }

              }
          },

      });
      return false
});

